<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/maybe"
    tools:context="com.example.sadhanaravoori.firebasevconnect.VolunteerRegistration">


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email ID"
        android:textColorHint="#000"
        android:inputType="textEmailAddress"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#000"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/submit" />


    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Have an Account? Signin"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:layout_below="@+id/submit"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="27dp"
        app:srcCompat="@drawable/vconnectlogofinal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/submit"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:backgroundTint="#000"
        android:padding="10dp"
        android:text="Register"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="20dp" />


</RelativeLayout>